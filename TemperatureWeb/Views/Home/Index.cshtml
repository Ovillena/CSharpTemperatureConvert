@{
    ViewData["Title"] = "Home Page";
}

<form action="/home/form1" method="post">
    From: <select name="inUnit" id="inUnit" required>
        <option restricted hidden></option>
        <option value="Fahrenheit">Fahrenheit</option>
        <option value="Celsius">Celcius</option>
        <option value="Kelvin">Kelvin</option>
    </select>
    <input type="number" name="temperature" placeholder="Temperature number" required>
    <br>
    To: <select name="outUnit" id="outUnit" required>
        <option value="" restricted hidden></option>
        <option value="Fahrenheit">Fahrenheit</option>
        <option value="Celsius">Celcius</option>
        <option value="Kelvin">Kelvin</option>
    </select>
    <input type="submit" value="Convert">
</form>

@{
    if (ViewBag.InUnit != null)
    {
        <p>@ViewBag.Temperature degrees in @ViewBag.InUnit is equal to @ViewBag.Conversion degrees in @ViewBag.OutUnit.</p>
    }
}
